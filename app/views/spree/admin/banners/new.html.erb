<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @banner } %>

<% content_for :page_title do %>
  <%= t(:new_banner) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to t(:back_to_banner_list), admin_banners_url, class: 'btn-primary', :icon => 'icon-arrow-left' %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @banners } %>

<%= form_for [:admin, @banner], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_banner_box">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>