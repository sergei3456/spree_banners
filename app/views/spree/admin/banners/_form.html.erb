<div data-hook="admin_banner_form_fields" class="row">
  <div class="col-12 col-md-8" data-hook="admin_banner_form_left">
    <div class="form-group">
      <%= f.label :title, raw(t(:title) + content_tag(:span, ' *', :class => 'required')) %>
      <%= f.text_field :title, :class => 'form-control' %>
      <%= f.error_message_on :title %>
    </div>

    <div class="form-group">
      <%= f.label :start, raw(t(:start) + content_tag(:span, ' *', :class => 'required')) %>
      <%= f.date_field :start, :class => 'form-control' %>
      <%= f.error_message_on :start %>
    </div>

    <div class="form-group">
      <%= f.label :end, raw(t(:end)) %>
      <%= f.date_field :end, :class => 'form-control' %>
      <%= f.error_message_on :end %>
    </div>

    <div class="form-group">
      <%= f.label :description, t(:description) %>
      <%= f.text_area :description, :class => 'form-control', :rows => 5 %>
      <%= f.error_message_on :description %>
    </div>

    <div class="form-group">
      <%= f.label :link, raw(t(:link) + content_tag(:span, ' *', :class => 'required')) %>
      <%= f.text_field :link, :class => 'form-control' %>
      <%= f.error_message_on :link %>
    </div>

    <div class="form-group">
      <%= f.label :location_page, raw(t(:location_page) + content_tag(:span, ' *', :class => 'required')) %>
      <%= f.select :location_page, Spree::Banner.pages_select, {:prompt => true}, {:class => 'form-control'} %>
      <%= f.error_message_on :location_page %>
    </div>

    <div class="form-group">
      <%= f.label :location_type, raw(t(:location) + content_tag(:span, ' *', :class => 'required')) %>
      <%= f.select :location_type, Spree::Banner.types_select, {:prompt => true}, {:class => 'form-control'} %>
      <%= f.error_message_on :location_type %>
    </div>

    <div class="form-group">
      <%= f.label :old_price, raw(t(:old_price)) %>
      <%= f.number_field :old_price, :class => 'form-control' %>
      <%= f.error_message_on :old_price %>
    </div>

    <div class="form-group">
      <%= f.label :new_price, raw(t(:new_price)) %>
      <%= f.number_field :new_price, :class => 'form-control' %>
      <%= f.error_message_on :new_price %>
    </div>

    <div class="form-group">
      <%= f.label :position, raw(t(:position)) %>
      <%= f.number_field :position, :class => 'form-control' %>
      <%= f.error_message_on :position %>
    </div>

    <div class="form-group mt-4">
      <div class="custom-file">
        <%= f.file_field :image, :class => 'custom-file-input' %>
        <label class="custom-file-label"></label>
      </div>
      <%= f.error_message_on :image %>
    </div>

    <div class="form-group">
      <%= f.check_box :visible, :class => 'form-check-label' %>
      <%= f.label :visible, t(:visible) %>
      <%= f.error_message_on :visible %>
    </div>
  </div>
  <div class="col-12 col-md-4" data-hook="admin_banner_form_right">
    <% unless f.object.new_record? %>
      <div data-hook="thumbnail" class="field alpha two columns">
        <%= f.label t(:thumbnail) %><br>
        <%= image_tag(@banner.image.variant(resize_to_limit: [370, nil]).processed.service_url) %>
      </div>
    <% end %>
  </div>

  <div class="clear"></div>

  <div data-hook="admin_banner_form_additional_fields"></div>

  <div class="clear"></div>
</div>